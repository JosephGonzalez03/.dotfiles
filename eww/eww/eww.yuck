;;)

(defpoll current_workspace
  :interval "1s"
  "scripts/get-active-workspace"
)

(defpoll workspaces
  :interval "1s"
  "scripts/get-workspaces"
)

(defpoll volume
  :interval "1s"
  "scripts/getvol"
)

(defpoll day
  :interval "10s"
  "date '+%b %e'"
)

(defpoll time
  :interval "10s"
  "date '+%H:%M'"
)

(defwidget bar []
  (box
    :class "status-bar"
    (box
      :orientation "h"
      :space-evenly false
      (label
        :class "primary"
        :text "LVL ${current_workspace}"
      )
      (box
        :class "primary"
        :space-evenly false
        :orientation "h"
        (label
          :class "workspaces"
          :text "${workspaces}"
        )
      )
    )
    (box
      :orientation "h"
      :space-evenly false
      :halign "center"
      (box
        :class "primary"
        :space-evenly false
        :orientation "h"
        (label
          :text "XP"
        )
      )
      (metric
        :class "primary"
        :label "${volume}%"
        :value volume
        :onchange "pamixer --set-volume {}"
      )
    )
    (box
      :orientation "h"
      :space-evenly false
      :halign "end"
      (label
        :class "primary"
        :text "${day}"
      )
      (label
        :class "primary"
        :text "${time}"
      )
    )
  )
)

(defwindow bar
  :monitor 0
  :windowtype "dock"
  :geometry (geometry 
    :width "100%"
    :height "2%"
    :anchor "top center"
  )
  :exclusive true
  (bar)
)
