(defwidget music []
  (box
    :class "music"
    :orientation "h"
    :space-evenly false
    :halign "center"
    {music != "" ? "ðŸŽµ${music}" : ""}))


(defwidget metric [label value onchange]
  (box
    :class "metric"
    :orientation "h"
    (scale
      :min 0
      :max 101
      :orientation "h"
      :active {onchange != ""}
      :value value
      :onchange onchange
    )
  )
)

(deflisten music
  :initial ""
  "playerctl --follow metadata --format '{{ artist }} - {{ title }}' || true")

